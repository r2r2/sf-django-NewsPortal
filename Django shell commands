User.objects.create_user(username='username')
Author.objects.create(author_name='author_name')
Category.objects.create(category_name='category_name')
author = Author.objects.get(id='id')
Post.objects.create(article_or_news='AR', author=author, post_title='post_title', post_text='Some Text')
Post.objects.get(id=1).category.add(Category.objects.get(id=1))
Comment.objects.create(post=Post.objects.get(id=2), user=User.objects.get(id=3),text='1st comment')
Post.objects.get(id=1).like()
Comment.objects.get(id=1).like()
Author.objects.get(id=1).update_rating()
Author.objects.order_by('author_rating').last()
Post.objects.order_by('post_rating').last()
Comment.objects.filter(post_id=1)
